<mvc:View
    controllerName="com.myorg.myapp.controller.TitleRefreshBar"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
        formatter: 'com/myorg/myapp/model/formatter'
    }"
>
    <Bar class="secondBar ">
        <contentLeft>
            <Title
                text="{i18n>SubHeaderTitle}"
                class="PackageControlTitle"
            />
        </contentLeft>
        <contentRight>
            <Button
                icon="sap-icon://refresh"
                text="{i18n>refreshButtonText}"
                iconFirst="false"
                class="roundedButton"
            />
        </contentRight>
    </Bar>
</mvc:View>

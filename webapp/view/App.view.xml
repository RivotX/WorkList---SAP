<mvc:View
    controllerName="com.myorg.myapp.controller.App"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
>
    <tnt:ToolPage>
        <tnt:header>
            <tnt:ToolHeader
                id="shellLikeToolHeader"
                class="topBlueBar whiteText  "
            >
                <core:Fragment
                    fragmentName="com.myorg.myapp.fragments.Header"
                    type="XML"
                />
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:mainContents>
            <NavContainer id="pageContainer">
                <pages>
                    <App id="app" />
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>

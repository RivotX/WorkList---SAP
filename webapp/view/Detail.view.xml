<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"
    controllerName="com.myorg.myapp.controller.Detail"
    height="100%"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    core:require="{
        formatter: 'com/myorg/myapp/model/formatter'
    }"
>
    <m:Page
        showNavButton="true"
        navButtonPress="onBack"
    >
        <ObjectPageLayout
            id="ObjectPageLayout"
            enableLazyLoading="true"
            beforeNavigate="onBeforeNavigate"
            useIconTabBar="true"
            showTitleInHeaderContent="true"
            upperCaseAnchorBar="false"
            sectionChange="onSectionChange"
            headerContentPinnable="false"
            class="sapUiMediumMarginBegin sapUiMediumMarginEnd"
        >
            <headerTitle>
                <ObjectPageDynamicHeaderTitle>
                    <expandedHeading>
                        <m:Title
                            text="{i18n>Package}"
                            wrapping="true"
                        />
                    </expandedHeading>

                    <snappedHeading>
                        <m:FlexBox
                            fitContainer="true"
                            alignItems="Center"
                        >
                            <m:Title
                                text="{i18n>Package}"
                                wrapping="true"
                            />
                        </m:FlexBox>
                    </snappedHeading>
                </ObjectPageDynamicHeaderTitle>
            </headerTitle>

            <headerContent>
                <m:VBox class="sapUiSmallMargin">
                    <f:Form
                        id="DetailForm"
                        editable="true"
                    >
                        <f:layout>
                            <f:ResponsiveGridLayout
                                labelSpanXL="4"
                                labelSpanL="4"
                                labelSpanM="4"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="0"
                                emptySpanL="0"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="3"
                                columnsL="2"
                                columnsM="2"
                                singleContainerFullSize="false"
                            />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="{i18n>PackageID}">
                                        <f:fields>
                                            <m:Input
                                                value="{detailData>/item/OBJID}"
                                                id="PackageID"
                                                editable="false"
                                                class="Blanco"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>PackageName}">
                                        <f:fields>
                                            <m:Input
                                                value="{detailData>/item/PACKAGE_NAME}"
                                                id="PackageName"
                                                editable="false"
                                                class="Blanco"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>State}">
                                        <m:GenericTag
                                            fieldGroupIds="genericTagGroup"
                                            text="{i18n>Request}"
                                            status="Error"
                                            class="sapUiSmallMarginBottom customTag"
                                            visible="{=${detailData>/item/STATUS} === 'R'}"
                                        />

                                        <m:GenericTag
                                            fieldGroupIds="genericTagGroup"
                                            text="{i18n>Send}"
                                            status="Success"
                                            class="sapUiSmallMarginBottom customTag"
                                            visible="{=${detailData>/item/STATUS} === 'S'}"
                                        />

                                        <m:GenericTag
                                            fieldGroupIds="genericTagGroup"
                                            text="{i18n>Warning}"
                                            status="Warning"
                                            class="sapUiSmallMarginBottom customTag"
                                            visible="{=${detailData>/item/STATUS} === 'A'}"
                                        />

                                        <m:GenericTag
                                            fieldGroupIds="genericTagGroup"
                                            text="{i18n>Error}"
                                            class="sapUiSmallMarginBottom customTag"
                                            visible="{=${detailData>/item/STATUS} === 'E'}"
                                        />
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="{i18n>CreationDate}">
                                        <f:fields>
                                            <m:Input
                                                value="{
                                            path: 'detailData>/item/CREATION_DATE',
                                            formatter: 'formatter.DateFormat'
                                        }"
                                                id="PackageCreationDate"
                                                editable="false"
                                                class="Blanco"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>TimeOn}">
                                        <f:fields>
                                            <m:Input
                                                value="{
                                            path: 'detailData>/item/STIME',
                                            formatter: 'formatter.TimeOnFormat'
                                        }"
                                                id="PackageTime"
                                                editable="false"
                                                class="Blanco"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>Priority}">
                                        <f:fields>
                                            <m:Input
                                                value="{detailData>/item/PRIORITY}"
                                                id="PackagePriority"
                                                editable="false"
                                                class="Blanco"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="{i18n>Progress}">
                                        <f:fields>
                                            <m:Input
                                                value="{
                                                path: 'detailData>/item/VARIABLE_02',
                                                formatter: 'formatter.NumberFormat2'
                                            }"
                                                id="PackageProgress"
                                                editable="false"
                                                class="Blanco"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>Price}">
                                        <f:fields>
                                            <m:Input
                                                value=""
                                                id="PackagePrice"
                                                editable="false"
                                                class="Blanco"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>History}">
                                        <f:fields>
                                            <m:Input
                                                value=""
                                                id="PackageHistory"
                                                editable="false"
                                                class="Blanco"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                </m:VBox>
            </headerContent>

            <sections>
                <!-- general data -->
                <ObjectPageSection
                    titleUppercase="false"
                    id="GeneralData"
                    title="{i18n>GeneralDataTab}"
                >
                    <subSections>
                        <ObjectPageSubSection
                            id="employ1mentSS2"
                            titleUppercase="false"
                        >
                            <blocks>
                                <!-- formulario general data -->
                                <m:VBox>
                                    <f:Form
                                        id="FormChangeColumn_oneGroup234"
                                        editable="true"
                                    >
                                        <f:title>
                                            <core:Title
                                                text="{i18n>GeneralDataFormTitle}"
                                            />
                                        </f:title>
                                        <f:layout>
                                            <f:ResponsiveGridLayout
                                                labelSpanL="12"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsL="2"
                                                columnsM="2"
                                            />
                                        </f:layout>
                                        <f:formContainers>
                                            <f:FormContainer>
                                                <f:formElements>
                                                    <f:FormElement
                                                        label="{i18n>PackageID}"
                                                    >
                                                        <f:fields>
                                                            <m:Input
                                                                value="{detailData>/item/OBJID}"
                                                                id="name"
                                                                editable="false"
                                                            />
                                                        </f:fields>
                                                    </f:FormElement>
                                                </f:formElements>
                                            </f:FormContainer>
                                            <f:FormContainer>
                                                <f:formElements>
                                                    <f:FormElement
                                                        label="{i18n>Company}"
                                                    >
                                                        <f:fields>
                                                            <m:Input
                                                                value="{Company}"
                                                                type="Text"
                                                            />
                                                        </f:fields>
                                                    </f:FormElement>
                                                </f:formElements>
                                            </f:FormContainer>
                                        </f:formContainers>
                                    </f:Form>
                                    <m:VBox class="PackageSummaryDetail">
                                        <m:Label text="{i18n>PackageSummary}" />
                                        <m:TextArea
                                            value="{PackageSummary}"
                                            width="100%"
                                            maxLength="250"
                                            rows="3"
                                            growing="true"
                                            growingMaxLines="3"
                                        />
                                    </m:VBox>
                                    <!-- segundo form -->

                                    <f:Form
                                        id="SecondForm"
                                        editable="true"
                                    >
                                        <f:layout>
                                            <f:ResponsiveGridLayout
                                                labelSpanXL="12"
                                                labelSpanL="12"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                columnsXL="3"
                                                columnsL="3"
                                                columnsM="2"
                                            />
                                        </f:layout>
                                        <f:formContainers>
                                            <f:FormContainer>
                                                <f:formElements>
                                                    <f:FormElement
                                                        label="{i18n>DestCountry}"
                                                    >
                                                        <m:Input
                                                            id="productInput"
                                                            placeholder="Enter product"
                                                            showSuggestion="true"
                                                            showTableSuggestionValueHelp="false"
                                                            suggestionRows="{/countries}"
                                                        >
                                                            <m:suggestionColumns
                                                            >
                                                                <m:Column>
                                                                    <m:Label
                                                                        text="Name"
                                                                    />
                                                                </m:Column>
                                                                <m:Column
                                                                    hAlign="Center"
                                                                >
                                                                    <m:Label
                                                                        text="Product ID"
                                                                    />
                                                                </m:Column>
                                                                <m:Column
                                                                    hAlign="Center"
                                                                >
                                                                    <m:Label
                                                                        text="Supplier Name"
                                                                    />
                                                                </m:Column>
                                                                <m:Column
                                                                    hAlign="End"
                                                                >
                                                                    <m:Label
                                                                        text="Price"
                                                                    />
                                                                </m:Column>
                                                            </m:suggestionColumns>

                                                            <m:suggestionRows>
                                                                <m:ColumnListItem
                                                                >
                                                                    <m:Label
                                                                        text="{countries>country_name}"
                                                                    />

                                                                    <m:Label
                                                                        text="{
                                                                parts:[{path:'Price'}, {path:'CurrencyCode'}],
                                                                type: 'sap.ui.model.type.Currency',
                                                                formatOptions: {showMeasure: true}
                                                            }"
                                                                    />
                                                                </m:ColumnListItem>
                                                            </m:suggestionRows>
                                                        </m:Input>
                                                    </f:FormElement>
                                                </f:formElements>
                                            </f:FormContainer>

                                            <f:FormContainer>
                                                <f:formElements>
                                                    <f:FormElement
                                                        label="{i18n>DestAutCom}"
                                                    >
                                                        <f:fields>
                                                            <m:Select
                                                                id="country"
                                                                selectedKey="{Country}"
                                                            >
                                                                <m:items>
                                                                    <core:Item
                                                                        text="England"
                                                                        key="England"
                                                                    />
                                                                    <core:Item
                                                                        text="Germany"
                                                                        key="Germany"
                                                                    />
                                                                    <core:Item
                                                                        text="USA"
                                                                        key="USA"
                                                                    />
                                                                </m:items>
                                                            </m:Select>
                                                        </f:fields>
                                                    </f:FormElement>
                                                </f:formElements>
                                            </f:FormContainer>
                                            <f:FormContainer>
                                                <f:formElements>
                                                    <f:FormElement
                                                        label="{i18n>DestProvince}"
                                                    >
                                                        <f:fields>
                                                            <m:Select
                                                                id="destProvince"
                                                                selectedKey="{Country}"
                                                            >
                                                                <m:items>
                                                                    <core:Item
                                                                        text="England"
                                                                        key="England"
                                                                    />
                                                                    <core:Item
                                                                        text="Germany"
                                                                        key="Germany"
                                                                    />
                                                                    <core:Item
                                                                        text="USA"
                                                                        key="USA"
                                                                    />
                                                                </m:items>
                                                            </m:Select>
                                                        </f:fields>
                                                    </f:FormElement>
                                                </f:formElements>
                                            </f:FormContainer>
                                        </f:formContainers>
                                    </f:Form>
                                </m:VBox>
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                    <!-- tree -->
                   
                </ObjectPageSection>

                <!-- Provider data tab -->

                <ObjectPageSection
                    titleUppercase="false"
                    id="ProviderDataTab"
                    title="{i18n>ProviderDataTab}"
                >
                    <subSections>
                        <ObjectPageSubSection
                            id="employmentSS1"
                            title=""
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>

                        <ObjectPageSubSection
                            id="employmentSS2"
                            title="{i18n>GeneralDataTab}"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                            </blocks>
                            <moreBlocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </moreBlocks>
                        </ObjectPageSubSection>

                        <ObjectPageSubSection
                            id="employmentSS3"
                            title="Job Relationship"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
                <ObjectPageSection
                    titleUppercase="false"
                    id="connections"
                    title="Connections"
                >
                    <subSections>
                        <ObjectPageSubSection
                            id="connectionsSS1"
                            titleUppercase="false"
                        />
                    </subSections>
                </ObjectPageSection>
                <ObjectPageSection
                    titleUppercase="false"
                    title="{i18n>BankDataTab}"
                >
                    <subSections>
                        <ObjectPageSubSection
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>

                        <ObjectPageSubSection
                            id="3asd3"
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>
                        <ObjectPageSubSection
                            id="2ads"
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
                <ObjectPageSection
                    titleUppercase="false"
                    id="Tab4"
                    title="Tab4"
                >
                    <subSections>
                        <ObjectPageSubSection
                            id="123123123"
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>

                        <ObjectPageSubSection
                            id="11"
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>
                        <ObjectPageSubSection
                            id="12"
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
            </sections>
        </ObjectPageLayout>
        <m:Button
            class="cancelDetailButton"
            text="{i18n>Cancel}"
        />
    </m:Page>
</mvc:View>

<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"
    controllerName="com.myorg.myapp.controller.Detail"
    height="100%"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    core:require="{
        formatter: 'com/myorg/myapp/model/formatter'
    }"
>
    <m:Page
        showNavButton="true"
        navButtonPress="onBack"
    >
        <ObjectPageLayout
            id="ObjectPageLayout"
            enableLazyLoading="true"
            beforeNavigate="onBeforeNavigate"
            useIconTabBar="true"
            showTitleInHeaderContent="true"
            upperCaseAnchorBar="false"
            sectionChange="onSectionChange"
            class="DetailBackgroundColor"
        >
            <headerTitle>
                <ObjectPageDynamicHeaderTitle>
                    <expandedHeading>
                        <m:Title
                            text="{i18n>Package}"
                            wrapping="true"
                        />
                    </expandedHeading>

                    <snappedHeading>
                        <m:FlexBox
                            fitContainer="true"
                            alignItems="Center"
                        >
                            <m:Title
                                text="{i18n>Package}"
                                wrapping="true"
                            />
                        </m:FlexBox>
                    </snappedHeading>
                </ObjectPageDynamicHeaderTitle>
            </headerTitle>

            <headerContent>
                <m:VBox class="sapUiSmallMargin">
                    <f:Form
                        id="DetailForm"
                        editable="true"
                    >
                        <f:layout>
                            <f:ResponsiveGridLayout
                                labelSpanXL="4"
                                labelSpanL="4"
                                labelSpanM="4"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="0"
                                emptySpanL="0"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="3"
                                columnsL="3"
                                columnsM="2"
                                singleContainerFullSize="false"
                            />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="{i18n>PackageID}">
                                        <f:fields>
                                            <m:Input
                                                value="{detailData>/item/OBJID}"
                                                id="PackageID"
                                                editable="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>PackageName}">
                                        <f:fields>
                                            <m:Input
                                                value="{detailData>/item/PACKAGE_NAME}"
                                                id="PackageName"
                                                editable="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>State}">
                                        <f:fields>
                                            <m:GenericTag
                                                text="{i18n>Request}"
                                                status="Error"
                                                valueState="Error"
                                                class="sapUiSmallMarginBottom"
                                            />

                                            <m:GenericTag
                                                text="{i18n>Send}"
                                                status="Success"
                                                class="sapUiSmallMarginBottom"
                                            />
                                            <m:GenericTag
                                                text="{i18n>Warning}"
                                                status="Warning"
                                                class="sapUiSmallMarginBottom"
                                            />
                                            <m:GenericTag
                                                text="{i18n>Error}"
                                                class="sapUiSmallMarginBottom"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="{i18n>CreationDate}">
                                        <f:fields>
                                            <m:Input
                                                value="{
                                            path: 'detailData>/item/CREATION_DATE',
                                            formatter: 'formatter.DateFormat'
                                        }"
                                                id="PackageCreationDate"
                                                editable="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>TimeOn}">
                                        <f:fields>
                                            <m:Input
                                                value="{
                                            path: 'detailData>/item/STIME',
                                            formatter: 'formatter.TimeOnFormat'
                                        }"
                                                id="PackageTime"
                                                editable="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>Priority}">
                                        <f:fields>
                                            <m:Input
                                                value="{detailData>/item/PRIORITY}"
                                                id="PackagePriority"
                                                editable="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="{i18n>Progress}">
                                        <f:fields>
                                            <m:Input
                                                value="{
                                                path: 'detailData>/item/VARIABLE_02',
                                                formatter: 'formatter.NumberFormat2'
                                            }"
                                                id="PackageProgress"
                                                editable="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>Price}">
                                        <f:fields>
                                            <m:Input
                                                value=""
                                                id="PackagePrice"
                                                editable="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="{i18n>History}">
                                        <f:fields>
                                            <m:Input
                                                value=""
                                                id="PackageHistory"
                                                editable="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                </m:VBox>

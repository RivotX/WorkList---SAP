<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"
    controllerName="com.myorg.myapp.controller.Detail"
    height="100%"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    core:require="{
        formatter: 'com/myorg/myapp/model/formatter'
    }"
>
    <m:Page
        showNavButton="true"
        navButtonPress="onBack"
    >
        <ObjectPageLayout
            id="ObjectPageLayout"
            enableLazyLoading="true"
            beforeNavigate="onBeforeNavigate"
            useIconTabBar="true"
            showTitleInHeaderContent="true"
            upperCaseAnchorBar="false"
            sectionChange="onSectionChange"
            headerContentPinnable="false"
            class="sapUiMediumMarginBegin sapUiMediumMarginEnd"
        >
            <headerTitle>
                <ObjectPageDynamicHeaderTitle>
                    <expandedHeading>
                        <m:Title
                            text="{i18n>Package}"
                            wrapping="true"
                        />
                    </expandedHeading>

                    <snappedHeading>
                        <m:FlexBox
                            fitContainer="true"
                            alignItems="Center"
                        >
                            <m:Title
                                text="{i18n>Package}"
                                wrapping="true"
                            />
                        </m:FlexBox>
                    </snappedHeading>
                </ObjectPageDynamicHeaderTitle>
            </headerTitle>

            <headerContent>
                <!-- <m:VBox class="sapUiSmallMargin"> -->
                <f:Form
                    id="DetailForm"
                    editable="true"
                >
                    <f:layout>
                        <f:ResponsiveGridLayout
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="3"
                            columnsL="2"
                            columnsM="2"
                            singleContainerFullSize="false"
                        />
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer>
                            <f:formElements>
                                <f:FormElement label="{i18n>PackageID}">
                                    <f:fields>
                                        <m:Input
                                            value="{detailData>/item/OBJID}"
                                            id="PackageID"
                                            editable="false"
                                            class="Blanco"
                                        />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>PackageName}">
                                    <f:fields>
                                        <m:Input
                                            value="{detailData>/item/PACKAGE_NAME}"
                                            id="PackageName"
                                            editable="false"
                                            class="Blanco"
                                        />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>State}">
                                    <m:HBox class="">
                                        <core:Icon
                                            src="sap-icon://color-fill"
                                            color="{path: 'detailData>/item/STATUS', formatter: '.formatter.StatusFormat'}"
                                            class="bottom"
                                        />
                                    </m:HBox>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                        <f:FormContainer>
                            <f:formElements>
                                <f:FormElement label="{i18n>CreationDate}">
                                    <f:fields>
                                        <m:Input
                                            value="{
                                            path: 'detailData>/item/CREATION_DATE',
                                            formatter: 'formatter.DateFormat'
                                        }"
                                            id="PackageCreationDate"
                                            editable="false"
                                            class="Blanco"
                                        />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>TimeOn}">
                                    <f:fields>
                                        <m:Input
                                            value="{
                                            path: 'detailData>/item/STIME',
                                            formatter: 'formatter.TimeOnFormat'
                                        }"
                                            id="PackageTime"
                                            editable="false"
                                            class="Blanco"
                                        />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>Priority}">
                                    <f:fields>
                                        <m:HBox class="">
                                            <core:Icon
                                                src="sap-icon://color-fill"
                                                color="{path: 'detailData>/item/PRIORITY', formatter: '.formatter.PriorityFormatDetail'}"
                                                class="bottom"
                                            />
                                        </m:HBox>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                        <f:FormContainer>
                            <f:formElements>
                                <f:FormElement label="{i18n>Progress}">
                                    <f:fields>
                                        <m:Input
                                            value="{
                                                path: 'detailData>/item/VARIABLE_01',
                                                formatter: 'formatter.NumberFormat2'
                                            }"
                                            id="PackageProgress"
                                            editable="false"
                                            class="Blanco"
                                        />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>Price}">
                                    <f:fields>
                                        <m:Input
                                            value="{
                                                path: 'detailData>/item/VARIABLE_02',
                                                formatter: '.formatter.NumberFormatt'
                                                }"
                                            class="Blanco"
                                        />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>History}">
                                    <f:fields>
                                        <m:Input
                                            value=""
                                            id="PackageHistory"
                                            editable="false"
                                            class="Blanco"
                                        />
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form>
                <!-- </m:VBox> -->
            </headerContent>

            <sections>
                <!-- general data -->
                <ObjectPageSection
                    titleUppercase="false"
                    id="GeneralData"
                    title="{i18n>GeneralDataTab}"
                >
                    <subSections>
                        <ObjectPageSubSection
                            id="employ1mentSS2"
                            titleUppercase="false"
                        >
                            <blocks>
                                <!-- formulario general data -->
                                <m:VBox>
                                    <f:Form
                                        id="FormChangeColumn_oneGroup234"
                                        editable="true"
                                    >
                                        <f:title>
                                            <core:Title
                                                text="{i18n>GeneralDataFormTitle}"
                                            />
                                        </f:title>
                                        <f:layout>
                                            <f:ResponsiveGridLayout
                                                labelSpanL="12"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                emptySpanL="0"
                                                emptySpanM="0"
                                                emptySpanS="0"
                                                columnsL="2"
                                                columnsM="2"
                                            />
                                        </f:layout>
                                        <f:formContainers>
                                            <f:FormContainer>
                                                <f:formElements>
                                                    <f:FormElement
                                                        label="{i18n>PackageID}"
                                                    >
                                                        <f:fields>
                                                            <m:Input
                                                                value="{detailData>/item/OBJID}"
                                                                id="name"
                                                                editable="false"
                                                            />
                                                        </f:fields>
                                                    </f:FormElement>
                                                </f:formElements>
                                            </f:FormContainer>
                                            <f:FormContainer>
                                                <f:formElements>
                                                    <f:FormElement
                                                        label="{i18n>Company}"
                                                    >
                                                        <f:fields>
                                                            <m:Input
                                                                id="companyInput"
                                                                value="{Company}"
                                                                type="Text"
                                                                showValueHelp="true"
                                                                valueHelpRequest="onOpenCompany"
                                                            />
                                                        </f:fields>
                                                    </f:FormElement>
                                                </f:formElements>
                                            </f:FormContainer>
                                        </f:formContainers>
                                    </f:Form>
                                    <m:VBox class="PackageSummaryDetail">
                                        <m:Label text="{i18n>PackageSummary}" />
                                        <m:TextArea
                                        id="PackageSummary"
                                            value="{PackageSummary}"
                                            width="100%"
                                            maxLength="250"
                                            rows="3"
                                            growing="true"
                                            growingMaxLines="3"
                                        />
                                    </m:VBox>
                                    <!-- segundo form -->

                                    <f:Form
                                        id="SecondForm"
                                        editable="true"
                                    >
                                        <f:layout>
                                            <f:ResponsiveGridLayout
                                                labelSpanXL="12"
                                                labelSpanL="12"
                                                labelSpanM="12"
                                                labelSpanS="12"
                                                adjustLabelSpan="false"
                                                columnsXL="3"
                                                columnsL="3"
                                                columnsM="2"
                                            />
                                        </f:layout>
                                        <f:formContainers>
                                            <f:FormContainer>
                                                <f:formElements>
                                                    <f:FormElement
                                                        label="{i18n>DestCountry}"
                                                    >
                                                        <m:ComboBox
                                                            id="countryComboBox"
                                                            width="350px"
                                                            change=".onCountryChange"
                                                            items="{
                                                                path: 'country>/countries',
                                                                sorter: { path: 'country_name' }
                                                            }"
                                                        >
                                                            <m:items>
                                                                <core:Item
                                                                    key="{country>country_id}"
                                                                    text="{country>country_name}"
                                                                />
                                                            </m:items>
                                                        </m:ComboBox>
                                                    </f:FormElement>
                                                </f:formElements>
                                            </f:FormContainer>

                                            <f:FormContainer>
                                                <f:formElements>
                                                    <f:FormElement
                                                        label="{i18n>DestAutCom}"
                                                    >
                                                        <f:fields>
                                                            <m:ComboBox
                                                                id="autonomousCommunitiesComboBox"
                                                                change="onAutonomousCommunityChange"
                                                                width="350px"
                                                            >
                                                                <m:items>
                                                                    <core:Item
                                                                        key=""
                                                                        text=""
                                                                    />
                                                                </m:items>
                                                            </m:ComboBox>
                                                        </f:fields>
                                                    </f:FormElement>
                                                </f:formElements>
                                            </f:FormContainer>
                                            <f:FormContainer>
                                                <f:formElements>
                                                    <f:FormElement
                                                        label="{i18n>DestProvince}"
                                                    >
                                                        <f:fields>
                                                            <m:MultiComboBox
                                                                id="Province"
                                                                width="350px"
                                                                selectionChange="handleSelectionChange"
                                                                selectionFinish="handleSelectionFinish"
                                                                items="{
                                                                    path: 'country>/countries/0/autonomous_communities/1/provinces'
                                                                }"
                                                            >
                                                                <core:Item
                                                                    key="{country>province_id}"
                                                                    text="{country>province_name}"
                                                                />
                                                            </m:MultiComboBox>
                                                        </f:fields>
                                                    </f:FormElement>
                                                </f:formElements>
                                            </f:FormContainer>
                                        </f:formContainers>
                                    </f:Form>
                                </m:VBox>
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>

                <!-- Provider data tab -->

                <ObjectPageSection
                    titleUppercase="false"
                    id="ProviderDataTab"
                    title="{i18n>ProviderDataTab}"
                >
                    <subSections>
                        <ObjectPageSubSection
                            id="employmentSS1"
                            title=""
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>

                        <ObjectPageSubSection
                            id="employmentSS2"
                            title="{i18n>GeneralDataTab}"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                            </blocks>
                            <moreBlocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </moreBlocks>
                        </ObjectPageSubSection>

                        <ObjectPageSubSection
                            id="employmentSS3"
                            title="Job Relationship"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
                <ObjectPageSection
                    titleUppercase="false"
                    id="connections"
                    title="Connections"
                >
                    <subSections>
                        <ObjectPageSubSection
                            id="connectionsSS1"
                            titleUppercase="false"
                        />
                    </subSections>
                </ObjectPageSection>
                <ObjectPageSection
                    titleUppercase="false"
                    title="{i18n>BankDataTab}"
                >
                    <subSections>
                        <ObjectPageSubSection
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>

                        <ObjectPageSubSection
                            id="3asd3"
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>
                        <ObjectPageSubSection
                            id="2ads"
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
                <ObjectPageSection
                    titleUppercase="false"
                    id="Tab4"
                    title="Tab4"
                >
                    <subSections>
                        <ObjectPageSubSection
                            id="123123123"
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>

                        <ObjectPageSubSection
                            id="11"
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>
                        <ObjectPageSubSection
                            id="12"
                            title="Connect"
                            titleUppercase="false"
                        >
                            <blocks>
                                <m:Text text="aadasd" />
                                <m:Text text="aadasd" />
                            </blocks>
                        </ObjectPageSubSection>
                    </subSections>
                </ObjectPageSection>
            </sections>
        </ObjectPageLayout>
        <m:Button
            class="cancelDetailButton"
            text="{i18n>Cancel}"
        />
        <m:Button
            class="saveDetailButton"
            text="{i18n>Save}"
        />
        <m:Button
            class="saveDetailButton"
            text="{i18n>Save}"
            press="onSave"
        />
    </m:Page>
</mvc:View>

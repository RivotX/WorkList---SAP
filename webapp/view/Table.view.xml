<mvc:View
    xmlns:table="sap.ui.table"
    controllerName="com.myorg.myapp.controller.Table"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
        formatter: 'com/myorg/myapp/model/formatter'
    }"
>
    <table:Table
        id="sampleTable"
        rows="{ path:'data>/results'}"
        class="myTable"
    >
        <table:columns>
            <table:Column>
                <Label text='' />
                <table:template>
                    <core:Icon src="sap-icon://product" />
                </table:template>
            </table:Column>

            <table:Column sortProperty="OBJID">
                <Label text='{i18n>PackageID}' />
                <table:template>
                    <Text text="{data>OBJID}" />
                </table:template>
            </table:Column>

            <table:Column filterProperty="PACKAGE_NAME">
                <Label text='{i18n>PackageName}' />
                <table:template>
                    <Text text="{data>PACKAGE_NAME}" />
                </table:template>
            </table:Column>

            <table:Column>
                <Label text='{i18n>Desc}' />
                <table:template>
                    <Text text="{data>DESCRIPTION}" />
                </table:template>
            </table:Column>

            <table:Column>
                <Label text='{i18n>State}' />
                <table:template>
                    <core:Icon
                        src="sap-icon://circle-task-2"
                        color="{path: 'data>STATUS', formatter: '.formatter.StatusFormat'}"
                        class="iconoCentro"
                    />
                </table:template>
            </table:Column>

            <table:Column>
                <Label text='{i18n>CreationDate}' />
                <table:template>
                    <Text
                        text="{
                        path: 'data>CREATION_DATE',
                        formatter: '.formatter.DateFormat'
                    }"
                    />
                </table:template>
            </table:Column>

            <table:Column>
                <Label text='{i18n>TimeOn}' />
                <table:template>
                    <Text
                        text="{path: 'data>STIME', formatter: '.formatter.TimeOnFormat'}"
                    />
                </table:template>
            </table:Column>

            <table:Column>
                <Label text='{i18n>Progress}' />
                <table:template>
                    <Text
                        text="{
                path: 'data>VARIABLE_01',
                formatter: '.formatter.NumberFormat2'
                }"
                    />
                </table:template>
            </table:Column>

            <table:Column>
                <Label text='{i18n>Amount}' />
                <table:template>
                    <Text
                        text="{
                path: 'data>data>VARIABLE_02',
                formatter: '.formatter.NumberFormatt'
                }"
                    />
                </table:template>
            </table:Column>

            <table:Column
                filterProperty="TYPE_PACKAGE"
                filterType="sap.ui.model.type.String"
            >
                <Label text='{i18n>type}' />
                <table:template>
                    <Text
                        text="{
                    path: 'data>TYPE_PACKAGE',
                    formatter: '.formatter.TypeFormat'
                    }"
                    />
                </table:template>
            </table:Column>

            <table:Column>
                <Label text='{i18n>Priority}' />
                <table:template>
                    <core:Icon
                        color="#6cd331"
                        src="{path: 'data>PRIORITY',
                         formatter: '.formatter.PriorityFormat'}"
                        class="iconoCentro"
                    />
                </table:template>
            </table:Column>
        </table:columns>
    </table:Table>

    <Text id="entriesCounter" />
</mvc:View>

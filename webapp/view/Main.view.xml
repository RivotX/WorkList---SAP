<mvc:View
    xmlns:layout="sap.ui.layout"
    controllerName="com.myorg.myapp.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
        formatter: 'com/myorg/myapp/model/formatter'
    }"
>
    <Page id="page">
        <customHeader>
            <Bar class="">
                <contentMiddle>
                    <mvc:View
                        viewName="com.myorg.myapp.view.TitleRefreshBar"
                        type="XML"
                    />
                </contentMiddle>
            </Bar>
        </customHeader>

        <HBox
            class="sapUiLargeMarginBeginEnd sapUiLargeMarginBottom paddingtop10px"
        >
            <FlexBox direction="Column">
                <FlexBox
                    justifyContent="SpaceBetween"
                    alignItems="Center"
                    class="sapUiSmallMarginTop sapUiSmallMarginBeginEnd sapUiSmallMarginBottom"
                >
                    <mvc:View
                        viewName="com.myorg.myapp.view.Date"
                        type="XML"
                    />
                    <mvc:View
                        viewName="com.myorg.myapp.view.TableControls"
                        type="XML"
                    />
                </FlexBox>
                <mvc:View
                    viewName="com.myorg.myapp.view.Table"
                    type="XML"
                />
            </FlexBox>
        </HBox>

        <footer>
            <Bar class="botBlueBar">
                <contentMiddle>
                    <Text
                        text='{i18n>footerText}'
                        class="whiteText"
                    />
                </contentMiddle>
            </Bar>
        </footer>
    </Page>
</mvc:View>

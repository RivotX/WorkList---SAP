<mvc:View
    xmlns:layout="sap.ui.layout"
    controllerName="com.myorg.myapp.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
        formatter: 'com/myorg/myapp/model/formatter'
    }"
>
    <Page id="page">
        <customHeader>
            <Bar class="">
                <contentMiddle>
                    <mvc:View
                        viewName="com.myorg.myapp.view.TitleRefreshBar"
                        type="XML"
                    />
                </contentMiddle>
            </Bar>
        </customHeader>

       
            <mvc:View
                viewName="com.myorg.myapp.view.Table"
                type="XML"
            />
      

        <footer>
            <Bar class="botBlueBar">
                <contentMiddle>
                    <Text
                        text='{i18n>footerText}'
                        class="whiteText"
                    />
                </contentMiddle>
            </Bar>
        </footer>
    </Page>
</mvc:View>

<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    height="100%"
    width="100%"
>
    <Image
        height="1.5rem"
        class="sapUiSmallMarginBegin"
        src="https://www.sap.com/dam/application/shared/logos/sap-logo-svg.svg"
    />
    <Title
        level="H1"
        text="{i18n>appTitle}"
        wrapping="false"
        id="productName"
        class="whiteText"
    >
        <layoutData>
            <OverflowToolbarLayoutData priority="Disappear" />
        </layoutData>
    </Title>

    <ToolbarSpacer />
    <SearchField
        width="16rem"
        id="searchField"
        class="whiteIcon"
    >
        <layoutData>
            <OverflowToolbarLayoutData
                priority="Low"
                group="1"
            />
        </layoutData>
    </SearchField>
    <ToolbarSpacer id="spacer">
        <layoutData>
            <OverflowToolbarLayoutData
                priority="Low"
                group="1"
            />
        </layoutData>
    </ToolbarSpacer>
    <Button
        visible="false"
        icon="sap-icon://search"
        type="Transparent"
        id="searchButton"
        tooltip="Search"
        class="whiteIcon"
    />
    <OverflowToolbarButton
        icon="sap-icon://source-code"
        type="Transparent"
        tooltip="Action 1"
        text="Action 1"
        class="whiteIcon"
    >
        <layoutData>
            <OverflowToolbarLayoutData group="2" />
        </layoutData>
    </OverflowToolbarButton>
    <OverflowToolbarButton
        icon="sap-icon://card"
        type="Transparent"
        tooltip="Action 2"
        text="Action 2"
        class="whiteIcon"
    >
        <layoutData>
            <OverflowToolbarLayoutData group="2" />
        </layoutData>
    </OverflowToolbarButton>
    <ToolbarSeparator>
        <layoutData>
            <OverflowToolbarLayoutData group="2" />
        </layoutData>
    </ToolbarSeparator>
    <OverflowToolbarButton
        icon="sap-icon://action-settings"
        type="Transparent"
        text="Settings"
        class="whiteIcon"
    />
    <Button
        icon="sap-icon://bell"
        type="Transparent"
        tooltip="Notification"
        class="whiteIcon"
    >
        <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
        </layoutData>
    </Button>
    <tnt:ToolHeaderUtilitySeparator />
    <ToolbarSpacer width="1.125rem" />
    <Avatar
        src=""
        displaySize="XS"
        press=".onAvatarPressed"
        tooltip="Profile"
    >
        <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
        </layoutData>
    </Avatar>
</core:FragmentDefinition>
